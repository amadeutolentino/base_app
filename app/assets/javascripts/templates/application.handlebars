								<span class="icon-bar"></span>
            </a>
            <div class="brand">
                <i class='icon-cogs'>StarterApp</i>
            </div>
            <div class="nav-collapse in collapse" style="height: auto;">
                <ul class='nav pull-left'>
									<li {{bindAttr class="activeHome:active"}}>{{#linkTo "home"}}Home{{/linkTo}}</li>
									{{#if Auth.authToken}}
										{{#if Auth.currentUser.admin}}
											<li {{bindAttr class="activeUsers:active"}}>{{#linkTo "users.index"}}Users{{/linkTo}}</li>
